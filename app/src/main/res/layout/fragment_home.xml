<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FFF8"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <!-- Professional Greeting -->
        <LinearLayout
            android:id="@+id/greeting_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="32dp"
            android:padding="20dp"
            android:background="@drawable/rounded_card_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <!-- Header dengan informasi pengguna -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <!-- Ikon profil -->
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="#FFFFFF">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageProfile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_profile"
                        app:civ_border_width="0dp"
                        app:civ_border_color="@android:color/transparent"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
                <!-- Informasi tanggal dan waktu -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">
                    <TextView
                        android:id="@+id/text_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Senin, 12 Juni 2023"
                        android:textSize="12sp"
                        android:textColor="#E8F5E9"
                        android:fontFamily="sans-serif" />
                    <TextView
                        android:id="@+id/text_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09:30 AM"
                        android:textSize="10sp"
                        android:textColor="#C8E6C9"
                        android:fontFamily="sans-serif" />
                </LinearLayout>
                <!-- Ikon notifikasi -->
                <androidx.cardview.widget.CardView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_notifications_black_24dp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <!-- Text welcome -->
            <TextView
                android:id="@+id/text_welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selamat Datang"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="16dp" />
            <!-- Text greeting dengan nama pengguna yang disorot -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/text_greeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello, "
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium" />
                <TextView
                    android:id="@+id/text_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#81C784"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
            <!-- Subtitle dengan dekorasi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">
                <View
                    android:layout_width="4dp"
                    android:layout_height="20dp"
                    android:background="#81C784"
                    android:layout_marginEnd="8dp" />
                <TextView
                    android:id="@+id/text_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temukan layanan terbaik untuk Anda"
                    android:textSize="14sp"
                    android:textColor="#E8F5E9"
                    android:fontFamily="sans-serif" />
            </LinearLayout>
            <!-- Dekorasi bawah -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center">
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#C8E6C9"
                    android:layout_marginEnd="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Soedcare"
                    android:textSize="12sp"
                    android:textColor="#C8E6C9"
                    android:fontFamily="sans-serif-medium" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#C8E6C9"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>
        <!-- Service Icons Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/service_icons_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/greeting_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <!-- First Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_marginBottom="24dp">
                    <!-- Booking Kunjungan -->
                    <LinearLayout
                        android:id="@+id/booking_service"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp">
                        <!-- Card untuk icon -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#E8F5E9">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_calendar_booking" />
                        </androidx.cardview.widget.CardView>
                        <!-- Judul -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Booking"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:gravity="center"
                            android:layout_marginTop="8dp" />
                        <!-- Subjudul Kunjungan -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kunjungan"
                            android:textSize="10sp"
                            android:textColor="#666666"
                            android:gravity="center" />
                    </LinearLayout>
                    <!-- Tanya Soedcare -->
                    <LinearLayout
                        android:id="@+id/ask_clinician_service"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:padding="8dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#E8F5E9">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_chat_soedcare"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tanya Soedcare"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:gravity="center"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                    <!-- Info & Artikel -->
                    <LinearLayout
                        android:id="@+id/info_article_service"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:padding="8dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#E8F5E9">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_lightbulb_info"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Info Artikel"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:gravity="center"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </LinearLayout>
                <!-- Second Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <!-- Isi Hasil Pengukuran -->
                    <LinearLayout
                        android:id="@+id/measurement_service"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:padding="8dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#E8F5E9">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_queue_list"/> <!-- Penting: hapus tint agar warna asli muncul -->
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lihat"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:gravity="center"
                            android:layout_marginTop="8dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Antrian"
                            android:textSize="10sp"
                            android:textColor="#666666"
                            android:gravity="center" />
                    </LinearLayout>
                    <!-- Pilih Fasilitas Kesehatan -->
                    <LinearLayout
                        android:id="@+id/health_facility_service"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:padding="8dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#E8F5E9">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_hospital_building"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pilih Fasilitas"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:gravity="center"
                            android:layout_marginTop="8dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kesehatan"
                            android:textSize="10sp"
                            android:textColor="#666666"
                            android:gravity="center" />
                    </LinearLayout>
                    <!-- Empty space for balance -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <!-- Auto-Swipe ViewPager for Services -->
        <androidx.cardview.widget.CardView
            android:id="@+id/services_card"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/service_icons_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewpager_services"
                android:layout_width="match_parent"
                android:layout_height="200dp" />            <!-- Dots Indicator -->
            <LinearLayout
                android:id="@+id/dots_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/dot_selected" />
                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/dot_unselected" />
                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/dot_unselected" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>