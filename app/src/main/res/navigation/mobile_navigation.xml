<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.fanalbin.soedcare.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_history"
            app:destination="@id/navigation_history" />
    </fragment>

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.fanalbin.soedcare.ui.history.HistoryFragment"
        android:label="History"
        tools:layout="@layout/fragment_history" >
        <action
            android:id="@+id/action_navigation_history_to_navigation_notifications"
            app:destination="@id/navigation_notifications" />
    </fragment>


    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.fanalbin.soedcare.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.fanalbin.soedcare.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/bookingFragment"
        android:name="com.fanalbin.soedcare.ui.booking.BookingFragment"
        android:label="Booking"
        tools:layout="@layout/fragment_booking">

        <action
            android:id="@+id/action_bookingFragment_to_antrianFragment"
            app:destination="@id/antrianFragment" />
    </fragment>

    <fragment
        android:id="@+id/antrianFragment"
        android:name="com.fanalbin.soedcare.ui.antrian.AntrianFragment"
        android:label="Antrian"
        tools:layout="@layout/fragment_antrian" />


</navigation>