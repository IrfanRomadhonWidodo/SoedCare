<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground"
    android:padding="16dp">

    <!-- Header Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nomor Antrian"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnBackground"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Card untuk menampilkan informasi ketika belum ada antrian -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_no_queue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_info"
                app:tint="?attr/colorPrimary"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Belum Ada Antrian"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anda belum memiliki nomor antrian. Silakan melakukan booking terlebih dahulu."
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:gravity="center" />

            <Button
                android:id="@+id/btn_booking_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking Sekarang"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnPrimary"
                android:background="@drawable/green_button_selector"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Queue Number Card - Hanya tampil jika ada antrian -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_queue_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:visibility="gone"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Antrian Anda"
                android:textSize="16sp"
                android:textColor="?attr/colorOnPrimary"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tv_queue_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="48sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnPrimary"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tv_queue_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terkonfirmasi"
                android:textSize="14sp"
                android:textColor="?attr/colorOnPrimary" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Booking Info Card - Hanya tampil jika ada antrian -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_booking_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:visibility="gone"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informasi Booking"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Faskes"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary" />

                <TextView
                    android:id="@+id/tv_faskes_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Faskes Unsoed 1"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Tanggal"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary" />

                <TextView
                    android:id="@+id/tv_booking_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="15/09/2023"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Jam"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary" />

                <TextView
                    android:id="@+id/tv_booking_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10:00"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Terkonfirmasi"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Action Buttons - Hanya tampil jika ada antrian -->
    <Button
        android:id="@+id/btn_back_to_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kembali"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnPrimary"
        android:background="@drawable/green_button_selector"
        android:visibility="gone" />

</LinearLayout>