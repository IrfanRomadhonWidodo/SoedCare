<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State saat tombol ditekan -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#388E3C" /> <!-- Hijau lebih gelap saat ditekan -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- State saat tombol dipilih/disabled -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#388E3C" /> <!-- Hijau lebih gelap untuk状态 terpilih -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- State normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50" /> <!-- Hijau normal -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>